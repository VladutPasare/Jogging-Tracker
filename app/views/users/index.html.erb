<h1>Users</h1>

<p><%= link_to "New User", new_user_path %></p>

<table border="1" cellpadding="5">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Role</th>
    <th>Actions</th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.role %></td>
      <td>
        <%= link_to "Show", user_path(user) %> |
        <%= link_to "Edit", edit_user_path(user) %> |
        <%= link_to "Delete", user_path(user), data: { turbo_method: :delete } %>
      </td>
    </tr>
  <% end %>
</table>
